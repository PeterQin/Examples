<Window x:Class="WebProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="205" Width="433" FontSize="20">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto" MinHeight="60"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Text="Proxy:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Margin="6,0,0,0"  Text="10.4.100.7:8080" TextWrapping="NoWrap" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" BorderThickness="2" VerticalContentAlignment="Center"/>
        <ToggleButton Margin="0,18,0,0"  x:Name="toggle" Content="On" Grid.Column="2" Grid.Row="1" Click="toggle_Click"/>        

    </Grid>
</Window>
